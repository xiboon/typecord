{
    "compilerOptions": {
        "target": "es2021",
        "module": "ES2022",
        "allowJs": true,
        "moduleResolution": "Node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "sourceMap": true,
        "removeComments": true,
        "outDir": "dist",
        "baseUrl": "src"
    },
    "include": ["src/**/*"],
}
